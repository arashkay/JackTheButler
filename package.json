{
  "name": "jack-the-butler",
  "version": "0.1.0",
  "description": "AI-powered hospitality assistant for hotels",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env.development src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node --env-file=.env dist/index.js",
    "lint": "oxlint src/",
    "lint:fix": "oxlint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "pnpm lint && pnpm typecheck && pnpm test",
    "docker:build": "docker build -t jack-the-butler .",
    "docker:run": "docker run -p 3000:3000 -v jack-data:/app/data jack-the-butler",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx --env-file=.env.development src/db/seed.ts",
    "docs": "npx @redocly/cli preview-docs docs/api/openapi.yaml",
    "docs:lint": "npx @redocly/cli lint docs/api/openapi.yaml"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "hotel",
    "hospitality",
    "ai",
    "assistant",
    "chatbot",
    "whatsapp",
    "butler"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.0",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.8",
    "oxlint": "^0.15.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.4.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@hono/node-server": "^1.19.9",
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "jose": "^6.1.3",
    "libphonenumber-js": "^1.12.35",
    "openai": "^6.16.0",
    "pino": "^10.3.0",
    "sqlite-vec": "0.1.7-alpha.2",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  }
}
